<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_circle"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/home_store_icon"
                android:src="@mipmap/shop1"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/home_no_store"
                android:gravity="center_vertical"
                android:text="未认证店主，请点击申请认证"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>



        <LinearLayout
            android:background="@drawable/layout_bottom_circle"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/shop1"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:textColor="#333333"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="我的街店"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/shop2"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:textColor="#333333"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="店铺商品"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/shop3"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:textColor="#333333"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="店铺订单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/shop4"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:textColor="#333333"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="店铺信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/shop5"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:textColor="#333333"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="数据统计"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
</LinearLayout>
